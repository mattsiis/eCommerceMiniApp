.product-cube{
  background-color: #fff;
  width: 100%;
  height: 100px;
  display: flex;
  border-radius: 4px;
}

.image-container{
  padding: 0px 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.image-container image{
  width: 60px;
  height: 60px;
}

/* 介绍部分 */
.infomation{
  padding: 0 6px;
  display: flex
}
/* 信息 */
.info{
  display: block
}
.info .title {
  color: #333;
  padding: 16px 0 8px;
  font-size: 15px;
  font-weight: 600;
  line-height: 10px;
  display: block;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.info .intro {
  font-size: 14px;
  color: #999;
  line-height: 20px;
  display: block
}
/* 价格 */
.prices {
  padding: 0 8px 6px 20px;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: flex-end
}

.quantity{
  font-size: 16px;
  color: #666;
}
.price {
  color: #ff3747;
  font-size: 18px;
  font-weight: 500;
}
