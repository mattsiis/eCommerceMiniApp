.product-cube{
  width: 315px;
  height: 120px;
  padding: 10px 30px;
  display: flex;
}

.image-container{
  width: 100px;
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.image-container image{
  width: 100px;
  height: 100px;
  border-radius: 4px;
}

/* 介绍部分 */
.infomation{
  padding: 0 0 0 20px;
  width: 195px;
  display: flex
}
/* 信息 */
.info{
  display: block;
  text-align: left;
}
.info .flag{
  display: block;
  width: 20px;
}
.info .title {
  padding: 10px 0 8px;
  font-size: 16px;
  line-height: 10px;
  display: block
}
.info .intro {
  font-size: 12px;
  height: 36px;
  color: #999;
  line-height: 18px;
  display: block
}
.info .price-container{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 195px;
}
.info .price-container .next{
  width: 12px
}
/* 价格 */
.prices {
  padding: 0 0 0 20px;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: flex-end
}

.price {
  color: #ff3747;
  font-size: 18px;
  font-weight: 500;
}
