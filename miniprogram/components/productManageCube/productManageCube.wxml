<!-- 产品管理列表 -->
<view class='product-manage-cube'>
  <!-- 信息 -->
  <view class='information'>
    <!-- 产品图 -->
    <view class='IMAGE'>
      <image src='{{data.productImageUrl[0]}}'></image>
    </view>

    <view class='productInfo'>
      <view class='name'>{{data.name}}</view>
      <view class='intro'>{{data.intro}}</view>
      <view class='id'>ID：{{data.id}}</view>
      <view class='qtySold'>销量：{{data.qtySold || 0}}</view>
      <view class='inventory'>库存：{{data.inventory || 0}}</view>
      <view class='price'>￥{{data.price / 100}}</view>
    </view>
  </view>
  <!-- 按钮 -->
  <view class='buttom'>
    <!-- 编辑 -->
    <view>
      <text>编辑</text>
    </view>

    <!-- 删除 -->
    <view>
      <text>删除</text>
    </view>
  </view>
</view>

