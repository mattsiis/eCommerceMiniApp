page {
  background-color: #f5f5f5;
}

/* 购物车卡片样式 */

.cart {
  padding: 0 0 60px;
}

.product-cube {
  display: flex;
  background-color: white;
  margin: 0 0 10px;
}

.checkmark {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

.checkmark text {
  margin: 10px;
  height: 14px;
  width: 14px;
  border-radius: 8px;
  border: 1px solid #333;
}

/* 底部合计与去结算样式 */

.shopping-part {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  height: 50px;
  line-height: 50px;
  display: flex;
  text-align: center;
  font-size: 20px;
  background: #fff;
}

.shopping-part .select-all {
  display: flex;
}

.shopping-part .select-all .item-allselect {
  display: flex;
  padding: 10px;
}

.shopping-part .prices {
  display: flex;
  flex: 1;
  justify-content: flex-end;
  font-weight: bold;
}

.shopping-part .total {
  font-size: 16px;
  font-weight: 600;
  color: #666;
}

.shopping-part .price {
  padding: 0 20px 0 0;
  color: #ff3747;
}

.shopping-part .buy-btn {
  font-weight: bold;
  width: 120px;
  background: #ff3747;
  color: #fff;
  font-size: 18px;
}

.shopping-part .buy-btn.noselect {
  background: #999;
}

/* 底部没有更多了固定文字 */

.nomore {
  text-align: center;
}

.nomore text {
  font-size: 14px;
  color: #aaa;
  padding: 0 6px;
}

/* 滑动删除部分 */

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  padding: 6px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.remove {
  background-color: #ff3737;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .remove {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
